Subject: [PATCH] Update Makefiles

---
 devLib/Makefile   | 13 ++++++++++++-
 gpio/Makefile     | 10 +++++++++-
 wiringPi/Makefile | 11 +++++++++++
 3 files changed, 32 insertions(+), 2 deletions(-)

diff --git a/devLib/Makefile b/devLib/Makefile
index cf665d6..bc54dd8 100644
--- a/devLib/Makefile
+++ b/devLib/Makefile
@@ -37,7 +37,7 @@ DYNAMIC=libwiringPiDev.so.$(VERSION)
 #DEBUG	= -g -O0
 DEBUG	= -O2
 CC	= gcc
-INCLUDE	= -I.
+INCLUDE	= -I. -I../wiringPi/
 DEFS	= -D_GNU_SOURCE
 CFLAGS	= $(DEBUG) $(DEFS) -Wformat=2 -Wall -Winline $(INCLUDE) -pipe -fPIC
 
@@ -73,6 +73,7 @@ $(DYNAMIC):	$(OBJ)
 .c.o:
 	$Q echo [Compile] $<
 	$Q $(CC) -c $(CFLAGS) $< -o $@
+	@ln -sf libwiringPiDev.so.$(VERSION) libwiringPiDev.so
 
 .PHONY:	clean
 clean:
@@ -115,6 +116,16 @@ install-deb:	$(DYNAMIC)
 	install -m 0755 libwiringPiDev.so.$(VERSION)				~/wiringPi/debian-template/wiringPi/usr/lib/libwiringPiDev.so.$(VERSION)
 	ln -sf ~/wiringPi/debian-template/wiringPi/usr/lib/libwiringPiDev.so.$(VERSION)	~/wiringPi/debian-template/wiringPi/usr/lib/libwiringPiDev.so
 
+.PHONY:	install-fedora
+install-fedora:	$(DYNAMIC)
+	@echo "[Install Headers]"
+	@install -m 0755 -d						$(DESTDIR)$(PREFIX)/include/wiringPi
+	@install -m 0644 $(HEADERS)					$(DESTDIR)$(PREFIX)/include/wiringPi
+	@echo "[Install Dynamic Lib]"
+	@install -m 0755 -d						$(DESTDIR)$(PREFIX)/lib
+	@install -m 0755 libwiringPiDev.so.$(VERSION)			$(DESTDIR)$(PREFIX)/lib/libwiringPiDev.so.$(VERSION)
+	@ln -sf $(PREFIX)/lib/libwiringPiDev.so.$(VERSION)		$(DESTDIR)$(PREFIX)/lib/libwiringPiDev.so
+
 .PHONY:	uninstall
 uninstall:
 	$Q echo "[UnInstall]"
diff --git a/gpio/Makefile b/gpio/Makefile
index 9ec160d..1592b27 100644
--- a/gpio/Makefile
+++ b/gpio/Makefile
@@ -33,7 +33,7 @@ endif
 #DEBUG	= -g -O0
 DEBUG	= -O2
 CC	= gcc
-INCLUDE	= -I$(DESTDIR)$(PREFIX)/include
+INCLUDE	= -I$(DESTDIR)$(PREFIX)/include -I../wiringPi -I../devLib
 CFLAGS	= $(DEBUG) -Wall -Wextra $(INCLUDE) -Winline -pipe
 
 LDFLAGS	= -L$(DESTDIR)$(PREFIX)/lib
@@ -80,6 +80,14 @@ endif
 	$Q mkdir -p		$(DESTDIR)$(PREFIX)/share/man/man1
 	$Q cp gpio.1		$(DESTDIR)$(PREFIX)/share/man/man1
 
+.PHONY:        install-fedora
+install-fedora:        gpio
+	@echo "[Install]"
+	@install -m 0755 -d	$(DESTDIR)$(PREFIX)/bin
+	@install -m 0755 gpio	$(DESTDIR)$(PREFIX)/bin
+	@mkdir -p		$(DESTDIR)$(PREFIX)/share/man/man1
+	@install -m 0644 gpio.1	$(DESTDIR)$(PREFIX)/share/man/man1
+
 .PHONY:	install-deb
 install-deb:	gpio
 	$Q echo "[Install: deb]"
diff --git a/wiringPi/Makefile b/wiringPi/Makefile
index 287fa58..c0bbff3 100644
--- a/wiringPi/Makefile
+++ b/wiringPi/Makefile
@@ -80,6 +80,7 @@ $(DYNAMIC):	$(OBJ)
 .c.o:
 	$Q echo [Compile] $<
 	$Q $(CC) -c $(CFLAGS) $< -o $@
+	@ln -sf libwiringPi.so.$(VERSION) libwiringPi.so
 
 
 .PHONY:	clean
@@ -114,6 +115,16 @@ install-deb:	$(DYNAMIC)
 	install -m 0755 libwiringPi.so.$(VERSION)				~/wiringPi/debian-template/wiringPi/usr/lib/libwiringPi.so.$(VERSION)
 	ln -sf ~/wiringPi/debian-template/wiringPi/usr/lib/libwiringPi.so.$(VERSION)	~/wiringPi/debian-template/wiringPi/usr/lib/libwiringPi.so
 
+.PHONY:	install-fedora
+install-fedora:	$(DYNAMIC)
+	@echo "[Install Headers]"
+	@install -m 0755 -d						$(DESTDIR)$(PREFIX)/include/wiringPi
+	@install -m 0644 $(HEADERS)					$(DESTDIR)$(PREFIX)/include/wiringPi
+	@echo "[Install Dynamic Lib]"
+	@install -m 0755 -d						$(DESTDIR)$(PREFIX)/lib
+	@install -m 0755 libwiringPi.so.$(VERSION)			$(DESTDIR)$(PREFIX)/lib/libwiringPi.so.$(VERSION)
+	@ln -sf $(PREFIX)/lib/libwiringPi.so.$(VERSION)			$(DESTDIR)$(PREFIX)/lib/libwiringPi.so
+
 .PHONY:	uninstall
 uninstall:
 	$Q echo "[UnInstall]"
